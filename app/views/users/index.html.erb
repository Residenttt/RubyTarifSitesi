<%= render 'ortak/page_title', baslik: "Üye Listesi" %>

<div align="center">
  <% @users.each do |user| %>
    <div class="col-12">
      <div class="card">
        <div class="card-body">
          <div class="row">
            <div class="col-md-2">
              <section class="yazar">
                <li><%= link_to gravatar_for(user), user_path(user) %></li>
              </section>
            </div>
            <div class="col-md-8 well">
              <h5><%= link_to user.username.capitalize, user_path(user) %></h5>
              <p><%= pluralize(user.tariflers.count, "Tarif") if user.tariflers %></p>
              <% if logged_in? && current_user.admin? && !user.admin? %>
              <li><%= link_to "Üyeyi sil", user_path(user), method: :delete, data: {confirm: "Üyeyi ve açmış olduğu tüm tarifleri silmek istediğinizden emin misiniz?"} %></li>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>
  <br>
</div>
<div class="d-flex justify-content-center">
  <%= pagy_bootstrap_nav(@pagy).html_safe %>
</div>