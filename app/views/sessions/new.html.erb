<%= render 'ortak/page_title', baslik: "Giriş Yap" %>

<%= form_for(:session, :html => {class: "form-horizontal", role: "form"}, url: login_path) do |f| %>
  <b>
  <div class="form-group">
    <div class="control-label col-md-2">
      <%= f.label :email %>
    </div>
    <div class="col-md-8">
      <%= f.email_field :email, class:"form-control", placeholder: "E-posta adresinizi giriniz." %>
