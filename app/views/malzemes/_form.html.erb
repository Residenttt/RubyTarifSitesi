<%= render 'ortak/hata', hata: @malzeme %>

<div class="row" align="center">
  <div class="col-md-10">
    <%= form_for(@malzeme, :html => {class: "form-horizontal", role: "form"}) do |f| %>
      <div class="form-group">
        <div class="control-label col-md-2">
          <%= f.label "Malzeme Adı" %>
        </div>
        <div class="col-md-8">
          <%= f.text_field :name, class: "form-control", placeholder: "Malzemenin adını giriniz.", autofocus: true %>
        </div>
        <br>
      </div>
      <br>
      <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
          <%= f.submit(@malzeme.new_record? ? "Malzeme Ekle": "Malzemeyi Güncelle", class: "btn btn-primary btn-xlarge") %>
        </div>
      </div>
    <% end %>
    <br><div class="col-md-4 col-md-offset-4 renkk"><b>
    <%= link_to "Malzeme Listesine Bak", malzemes_path %>
  </b></div>
  </div>
</div>